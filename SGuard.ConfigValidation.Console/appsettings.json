{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning",
      "SGuard": "Information",
      "SGuard.ConfigValidation.Services": "Information",
      "SGuard.ConfigValidation.Validators": "Information",
      "SGuard.ConfigValidation.Output": "Information",
      "ConsoleApp1": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": false,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "Security": {
    "MaxFileSizeBytes": 104857600,
    "MaxEnvironmentsCount": 1000,
    "MaxRulesCount": 10000,
    "MaxConditionsPerRule": 1000,
    "MaxValidatorsPerCondition": 100,
    "MaxPathCacheSize": 10000,
    "MaxPathLength": 4096,
    "MaxJsonDepth": 64
  }
}

