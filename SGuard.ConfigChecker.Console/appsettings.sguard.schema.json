{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SGuard Config Checker v1.0",
  "type": "object",
  "required": ["version", "environments", "rules"],
  "properties": {
    "version": { 
      "type": "string", 
      "const": "1",
      "description": "Configuration version"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "description": "List of environments to validate",
      "items": {
        "type": "object",
        "required": ["id", "name", "path"],
        "properties": {
          "id": { 
            "type": "string", 
            "minLength": 1,
            "description": "Unique environment identifier"
          },
          "name": { 
            "type": "string", 
            "minLength": 1,
            "description": "Human readable environment name"
          },
          "path": { 
            "type": "string", 
            "minLength": 1,
            "description": "Path to the appsettings file for this environment"
          },
          "Description": { 
            "type": "string",
            "description": "Optional description of the environment"
          }
        },
        "additionalProperties": true
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "description": "Validation rules to apply",
      "items": {
        "type": "object",
        "required": ["id", "environments", "rule"],
        "properties": {
          "id": { 
            "type": "string", 
            "minLength": 1,
            "description": "Unique rule identifier"
          },
          "environments": {
            "type": "array",
            "minItems": 1,
            "description": "List of environment IDs this rule applies to",
            "items": { 
              "type": "string", 
              "minLength": 1 
            }
          },
          "rule": {
            "type": "object",
            "required": ["id", "conditions"],
            "properties": {
              "id": { 
                "type": "string", 
                "minLength": 1,
                "description": "Rule detail identifier"
              },
              "conditions": {
                "type": "array",
                "minItems": 1,
                "description": "List of validation conditions",
                "items": {
                  "type": "object",
                  "required": ["key", "condition"],
                  "properties": {
                    "key": { 
                      "type": "string", 
                      "minLength": 1,
                      "description": "Configuration key to validate (supports nested keys like 'ConnectionStrings:DefaultConnection')"
                    },
                    "condition": {
                      "type": "array",
                      "minItems": 1,
                      "description": "List of validators to apply to this key",
                      "items": {
                        "type": "object",
                        "required": ["validator", "message"],
                        "properties": {
                          "validator": {
                            "type": "string",
                            "enum": [
                              "required",
                              "min_len",
                              "max_len", 
                              "eq",
                              "gt",
                              "gte",
                              "in",
                              "lt",
                              "lte",
                              "ne"
                            ],
                            "description": "Type of validator to apply"
                          },
                          "value": {
                            "description": "Value to compare against (used by comparison validators)"
                          },
                          "message": {
                            "type": "string",
                            "minLength": 1,
                            "description": "Error message to display if validation fails"
                          }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}